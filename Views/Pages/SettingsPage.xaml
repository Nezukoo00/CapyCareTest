<Page x:Class="CapyCareTest.Views.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CapyCareTest.Views.Pages"
      mc:Ignorable="d" 
       d:DataContext="{d:DesignInstance local:SettingsPage,
                                  IsDesignTimeCreatable=False}"
         d:DesignHeight="450"
         d:DesignWidth="800"

         >

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Левая колонка: информация о программе -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Top">
            <TextBlock Text="О программе CapyCare" 
                       FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="Версия: 1.0.0" Margin="0,0,0,5"/>
            <TextBlock Text="Автор: Погиба В.А." Margin="0,0,0,5"/>
            <TextBlock Text="Сборка: капибарная" Margin="0,0,0,20"/>
            <TextBlock TextWrapping="Wrap">
                CapyCare — это система учёта и управления капибарами в вашем зоопарке. 
                Позволяет вести расписание кормлений, медицинские записи, а также 
                планировать события и приёмы посетителей.
            </TextBlock>
        </StackPanel>

        <!-- Правая колонка: видео, картинка и подпись -->
        <!--<StackPanel Grid.Column="1" VerticalAlignment="Top">
            --><!-- Видео --><!--
            <MediaElement
                x:Name="DemoVideo"
                Source="pack://siteoforigin:,,,/Assets/capyvideo.mp4"
                LoadedBehavior="Play"
                UnloadedBehavior="Stop"
                Stretch="Uniform"
                Height="200"
                Margin="0,0,0,10"/>

            --><!-- Картинка --><!--
            <Image
                Source="pack://siteoforigin:,,,/Assets/doggie.png" 
                Stretch="Uniform"
                Height="150"
                Margin="0,0,0,20"/>

            


            --><!-- Подпись --><!--
            <TextBlock
                Text="поставьте 3 хотя бы"
                FontSize="16"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"/>
        </StackPanel>-->
    </Grid>

</Page>
